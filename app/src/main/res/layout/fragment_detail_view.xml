<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/detail_view_scrollview_main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <de.dhbw.utils.CustomMapView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/detail_view_mapView" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_view_text_party_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_headline"
                    android:text="@string/party_name"/>

                <TextView
                    android:id="@+id/detail_view_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_normal"
                    android:text="@string/description"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/detail_view_text_street_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:textSize="@dimen/text_view_normal"
                            android:scrollHorizontally="true"
                            android:text="@string/street_name" />

                        <TextView
                            android:id="@+id/detail_view_text_house_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_view_normal"
                            android:scrollHorizontally="true"
                            android:text="@string/house_number" />




                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/detail_view_text_zipcode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_view_normal"
                            android:scrollHorizontally="true"
                            android:text="@string/zipcode" />


                        <TextView
                            android:id="@+id/detail_view_text_city_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:textSize="@dimen/text_view_normal"
                            android:scrollHorizontally="true"
                            android:text="@string/city_name" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_view_text_country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_normal"
                        android:scrollHorizontally="true"
                        android:text="@string/country_name" />


                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard">

                    <TextView
                        android:id="@+id/detail_view_text_party_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_normal"
                        android:maxLines="1"
                        android:text="@string/party_date"
                        android:layout_weight="5" />

                    <TextView
                        android:id="@+id/detail_view_text_party_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_normal"
                        android:maxLines="1"
                        android:text="@string/party_time"
                        android:layout_weight="5"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard">

                    <TextView
                        android:id="@+id/detail_view_text_party_type_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textSize="@dimen/text_view_normal"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="@string/party_type" />
                    <TextView
                        android:id="@+id/detail_view_text_party_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="@dimen/text_view_normal"
                        android:maxLines="1"
                        android:text="@string/party_type"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard">

                    <TextView
                        android:id="@+id/detail_view_text_music_genre_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textSize="@dimen/text_view_normal"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="@string/music_genre" />
                    <TextView
                        android:id="@+id/detail_view_text_music_genre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="@dimen/text_view_normal"
                        android:maxLines="1"
                        android:text="@string/music_genre"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:text="@string/detail_view_button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/detail_view_button_cancel"
                        android:visibility="gone"/>
                    <Button
                        android:text="@string/detail_view_button_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/detail_view_button_edit"
                        android:visibility="gone"/>
                    <Button
                        android:text="@string/detail_view_button_participate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/detail_view_button_participate"
                        android:visibility="gone"/>
                    <Button
                        android:text="@string/detail_view_button_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/detail_view_button_vote"
                        android:visibility="gone"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
    </ScrollView>
</LinearLayout>