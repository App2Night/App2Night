<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/test_statusTextView" />

    <Button
        android:text="Get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button_get"
        android:layout_marginStart="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="85dp" />

    <Button
        android:text="Put"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button_put"
        android:layout_alignBaseline="@+id/main_button_delete"
        android:layout_alignBottom="@+id/main_button_delete"
        android:layout_alignStart="@+id/main_button_get" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button_post"
        android:layout_alignBaseline="@+id/main_button_get"
        android:layout_alignBottom="@+id/main_button_get"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button_delete"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/main_button_post" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/main_button_settings"
        android:layout_above="@+id/main_button_get"
        android:layout_alignStart="@+id/main_button_get" />

    <Button
        android:text="GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_button_settings"
        android:layout_alignEnd="@+id/main_button_post"
        android:id="@+id/main_button_gps" />

    <Button
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:id="@+id/main_button_register"
        android:layout_above="@+id/main_button_gps"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
